#-----------------General--------------------------
alias GIT="cd ~/Documents/GIT"
alias GOO="cd ~/Google\ Drive"

#delete instead of rm (avoid permernant removal)
alias del="~/.JangoSettings/nix_common/trash.sh"
alias ls="ls -GpF"
alias ll="ls -GpFlats"
alias profile="vi ~/.zprofile ~/.JangoSettings/mac/bash_profile"

#show and hide hidden file
alias show="defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app"
alias hide="defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app"

#view system log
alias log="tail -f /var/log/system.log"

#-----------------Development--------------------------
#Python
alias py="python"
alias py3="python3"

#for C programming 
alias makefile="~/.JangoSettings/nix_common/copy_makefile.sh"
alias project="~/.JangoSettings/nix_common/create_project.sh"
alias watch="~/.JangoSettings/mac/watch_process.sh"

#-----------------VIM-----------------------------------

#enable ctrl+w+s (horizontal split) in vim
stty -ixon -ixoff

#-----------------PATH Environment Variable-----------------------------
export PATH="$HOME/Documents/android-sdk-macosx/platform-tools:$PATH"
export PATH="$HOME/Documents/android-sdk-macosx/tools:$PATH"

#----------------Terminal color----------------------------------
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
